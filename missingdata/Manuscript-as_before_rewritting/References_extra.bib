@article{dubrovinskyiron-silica2003,
  title={Iron-silica interaction at extreme conditions and the electrically conducting layer at the base of Earth's mantle.},
  author={Dubrovinsky, L and Dubrovinskaia, N and Langenhorst, F and Dobson, D and Rubie, D and Gessmann, C and Abrikosov, I and Johansson, B and Baykov, V and Vitos, L and Le Bihan, T and Crichton, W and Dmitriev, V and Weber, {H-P}},
  journal={Nature},
  volume={422},
  number={6927},
  pages={58-61},
  year={2003},
  abstract={The boundary between the Earth's metallic core and its silicate mantle is characterized by strong lateral heterogeneity and sharp changes in density, seismic wave velocities, electrical conductivity and chemical composition. To investigate the composition and properties of the lowermost mantle, an understanding of the chemical reactions that take place between liquid iron and the complex {Mg-Fe-Si-Al-oxides} of the Earth's lower mantle is first required. Here we present a study of the interaction between iron and silica {(SiO2)} in electrically and laser-heated diamond anvil cells. In a multianvil apparatus at pressures up to 140 {GPa} and temperatures over 3,800 K we simulate conditions down to the core-mantle boundary. At high temperature and pressures below 40 {GPa,} iron and silica react to form iron oxide and an iron-silicon alloy, with up to 5 wt\% silicon. At pressures of 85-140 {GPa,} however, iron and {SiO2} do not react and iron-silicon alloys dissociate into almost pure iron and a {CsCl-structured} {(B2)} {FeSi} compound. Our experiments suggest that a metallic silicon-rich B2 phase, produced at the core-mantle boundary (owing to reactions between iron and silicate), could accumulate at the boundary between the mantle and core and explain the anomalously high electrical conductivity of this region.},
  doi={10.1038/nature01422},
  url={http://dx.doi.org/10.1038/nature01422}
}

