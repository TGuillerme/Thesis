@article{bearda2009,
  title={A new primate from the Eocene Pondaung Formation of Myanmar and the monophyly of Burmese amphipithecids.},
  author={Beard, K and Marivaux, Laurent and Chaimanee, Yaowalak and Jaeger, {Jean-Jacques} and Marandat, Bernard and Tafforeau, Paul and Soe, Aung and Tun, Soe and Kyaw, Aung},
  journal={Proceedings. Biological sciences / The Royal Society},
  volume={276},
  number={1671},
  pages={3285-3294},
  year={2009},
  abstract={The family Amphipithecidae is one of the two fossil primate taxa from Asia that appear to be early members of the anthropoid clade. Ganlea megacanina, gen. et sp. nov., is a new amphipithecid from the late middle Eocene Pondaung Formation of central Myanmar. The holotype of Ganlea is distinctive in having a relatively enormous lower canine showing heavy apical wear, indicating an important functional role of the lower canine in food preparation and ingestion. A phylogenetic analysis of amphipithecid relationships suggests that Ganlea is the sister taxon of Myanmarpithecus, a relatively small-bodied taxon that has often, but not always, been included in Amphipithecidae. Pondaungia is the sister taxon of the Ganlea + Myanmarpithecus clade. All three Pondaung amphipithecid genera are monophyletic with respect to Siamopithecus, which is the most basal amphipithecid currently known. The inclusion of Myanmarpithecus in Amphipithecidae diminishes the likelihood that amphipithecids are specially related to adapiform primates. Extremely heavy apical wear has been documented on the lower canines of all three genera of Burmese amphipithecids. This distinctive wear pattern suggests that Burmese amphipithecids were an endemic radiation of hard object feeders that may have been ecological analogues of living New World pitheciin monkeys.},
  doi={10.1098/rspb.2009.0836},
  url={http://dx.doi.org/10.1098/rspb.2009.0836}
}

@article{drummondbeast:2007,
