}

@article{marivauxa2001,
  title={A fossil lemur from the Oligocene of Pakistan.},
  author={Marivaux, L and Welcomme, J and Antoine, P and M\'{e}tais, G and Baloch, I and Benammi, M and Chaimanee, Y and Ducrocq, S and Jaeger, J},
  journal={Science {(New} York, {N.Y.)}},
  volume={294},
